@model Estapar.Models.Manobra

@{
    ViewData["Title"] = "Alterar manobra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alterar manobra</h1>

<h4>Manobra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ManobraId" />
            <div class="form-group">
                <label asp-for="ManobristaId" class="control-label"></label>
                <select asp-for="ManobristaId" class="form-control" asp-items="ViewBag.ManobristaId"></select>
                <span asp-validation-for="ManobristaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label"></label>
                <select asp-for="VeiculoId" class="form-control" asp-items="ViewBag.VeiculoId"></select>
                <span asp-validation-for="VeiculoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataManobra" class="control-label"></label>
                <input asp-for="DataManobra" class="form-control" />
                <span asp-validation-for="DataManobra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}